<div class="container">
<h1>Posts</h1>
 <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="index.html">Home</a>
        </li>
        <li class="breadcrumb-item active">Blog Home</li>
      </ol>
<% @posts.each do |post| %>
<div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <h2 class="card-title"><%= post.title %></h2>
              <p class="card-text" style="overflow: hidden;"><%= post.body %></p>
             <%= link_to "Read More",post_path(post),:class => 'btn btn-primary' %>
            </div>
          </div>
        </div>
</div>
    
<% end %>
</div>
